@model NDKSkateShopMVC.Models.DonDatHang
@{
    ViewBag.Title = "SuaDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align:center">CHỈNH SỬA ĐƠN HÀNG</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDOrder)

            <div class="form-group">
                IdOder
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDOrder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IDOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Ngày đặt hàng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayDH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Địa chỉ giao hàng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DCGH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DCGH, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                MÃ KH
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CodeCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CodeCus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>}

<div>
    @Html.ActionLink("TRỞ VỀ", "DonHang")
</div>


