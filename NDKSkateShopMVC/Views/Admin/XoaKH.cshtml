@model NDKSkateShopMVC.Models.KhachHang
@{
    ViewBag.Title = "XoaKH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; padding-top: 23px; font-weight: bold;">XÁC NHẬN THÔNG TIN KHÁCH HÀNG CẦN XÓA</h2>

<h3>Bạn quyết định xóa loại người dùng này?</h3>
<div>
    <h4>Khách hàng</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            CodeCus Khách Hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodeCus)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Khachhang")
        </div>
    }
</div>

